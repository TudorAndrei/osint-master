# Postgres / DBOS
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=osint
DBOS_SYSTEM_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/osint

# Logfire observability
